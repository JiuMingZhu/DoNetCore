
@{
    ViewData["Title"] = "CategoriesView";
}

<section>
    @{
        var ModelType = ViewData.Model.GetType();
        if (ModelType == typeof(List<string>))
        {
            foreach (var Category in Model)
            {
                <div  class="items">
                    <a href="/blog/@ViewData["action"]/@Category">@Category</a>
                </div>
            }
        }
        else if (ModelType == typeof(List<Blog.Models.BlogModel>))
        {
            @foreach (var blog in Model)
            {
                var link = "/blog/article?id=" + blog.Id;
                <div  class="items">
                    <p>@blog.CreateTime</p>
                    <a href="@link">@blog.Title</a>
                </div>
            }
        }
    }
</section>