	<link rel="stylesheet" href="~/css/Universal.css" />
	<!-- Markdown转换 -->
	<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
	<link rel="stylesheet" href="@Url.Content("~/highlight/styles/tomorrow-night-eighties.css")">
</head>
<body>
	<header>
		<div class="snow">
			<p id="hitokoto">吾之初心，永世不忘</p>
			<p id="hitokoto_from">吾之初心，永世不忘</p>
		</div>
	</header>
	<nav>
		<a href='/blog/home' id="home">Home</a>
		<a href='/blog/archives' id="archives">Archives</a>
		<a href='/blog/categories' id="categories">Categories</a>
		<a href='/blog/tags' id="tags">Tags</a>
		<a href='/blog/about' id="about">About</a>
	</nav>
	<div class="nan" id="nan">
		<img src="~/images/backgrounds/long.png" />
	</div>

	<div class="nv" id="nv">
		<img src="~/images/backgrounds/sanye.png" />
	</div>
	<header></header>

	<section style="width:100%;height:200vh; margin-top:20px">
		<div id="edit_area">
			<div id="editor"></div>
		</div>
	</section>



	<footer>
		@*<div id="landlord">
				<div class="message" style="opacity:0"></div>
				<canvas id="live2d" width="280" height="250" class="live2d"></canvas>
				<div class="hide-button">隐藏</div>
			</div>*@
	</footer>
	<!-- jQuery-->
	<script src="@Url.Content("~/js/jquery-3.3.1.min.js")"></script>
	<!-- Markdown转换 -->
	<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
	<link rel="stylesheet" href="@Url.Content("~/highlight/styles/tomorrow-night-eighties.css")">
	<script src="@Url.Content("~/highlight/highlight.pack.js")"></script>
	<!-- Ace -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.0/ace.js" type="text/javascript" charset="utf-8"></script>
	<script src="@Url.Content("~/js/Universal.js")"></script>
	<script type="text/javascript">
        var message_Path = "@Url.Content("~/live2d/")"
        var home_Path = '/'  //此处修改为你的域名，必须带斜杠
	</script>
	<script type="text/javascript" src="@Url.Content("~/live2d/js/live2d.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/live2d/js/message.js")"></script>
	<script type="text/javascript">
        loadlive2d("live2d", "@Url.Content("~/live2d/model/pio/model.json")");
	</script>

	<script>
		var editor = ace.edit("editor");
		editor.setTheme("ace/theme/monokai");
		editor.getSession().setMode("ace/mode/markdown"); // 一定要使用定义好的Mode
		document.getElementById('nan').onclick = function () {
			preview();
		}
		document.getElementById('nv').onclick = function () {
			edit();
		}



		function preview() {
			$('#div').remove();
			var s = editor.getValue();
			var $i = $("<div id='div'></div>")
			$('#editor').hide();
			$("#edit_area").append($i);
			var b = marked(s);
			document.getElementById('div').innerHTML = b;
			hljs.initHighlighting.called = false;
			hljs.initHighlighting();
		}

		function edit() {
			$('#div').remove();
			$('#editor').show();
		}

	</script>
</body>
</html>