@{
    ViewData["Title"] = "AboutView";
    Layout = null;
}
<!DOCTYPE html>
<style type="text/css" media="screen">
    #editor {
        width: 800px;
        height: 400px;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        font-size: 20px;
    }

    .ace_content {
        margin-top: 0px;
        width: 766px;
        height: 508px;
        margin-left: 0px;
    }

    .ace_gutter-cell {
        height: 14px;
    }
</style>

<!-- jQuery-->
<script src="@Url.Content("~/js/jquery-3.3.1.min.js")"></script>
<!-- Markdown转换 -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<link rel="stylesheet" href="@Url.Content("~/highlight/styles/tomorrow-night-eighties.css")">
<script src="@Url.Content("~/highlight/highlight.pack.js")"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.0/ace.js" type="text/javascript" charset="utf-8"></script>

<button style="z-index:99999999999999999999999999999999;color:red;position:fixed;left:10px;bottom:10px" id="button">aaaaaaaaa</button>
<div id="editor"></div>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/markdown"); // 一定要使用定义好的Mode
    document.getElementById('button').onclick = function () { a() }
    function a() {
        $('#div').remove();
        var s=editor.getValue();
        var $i = $("<div style=\"width:40%;position:fixed;right:10px;top:10px\" id='div'></div>")
        $("body").append($i);
        var b = marked(s);
        document.getElementById('div').innerHTML = b;
        hljs.initHighlighting.called = false;
        hljs.initHighlighting();
    }
    
</script>

